{% macro initial_cluster() -%}
{% for host in groups[etcd_peers_group] -%}
  {{ hostvars[host]['ansible_hostname'] }}={{ etcd_peer_url_scheme }}://{{ hostvars[host]['ansible_' + etcd.interface].ipv4.address }}:{{ etcd.peer_port }}
  {%- if not loop.last -%},{%- endif -%}
{%- endfor -%}
{% endmacro -%}
apiVersion: v1
kind: Pod
metadata:
  annotations:
    scheduler.alpha.kubernetes.io/critical-pod: ""
  labels:
    component: etcd
    tier: control-plane
  name: etcd
  namespace: kube-system
spec:
  containers:
  - command:
    - etcd
    - --advertise-client-urls={{ etcd_advertise_client_urls }}
    - --cert-file={{ kube.cert_dir }}/etcd.pem
    - --client-cert-auth=true
    - --data-dir={{ etcd.data_dir }}
    - --initial-advertise-peer-urls={{ etcd_initial_advertise_peer_urls }}
    - --initial-cluster={{ initial_cluster() }}
    - --key-file={{ kube.cert_dir }}/etcd-key.pem
    - --listen-client-urls={{ etcd_listen_client_urls }}
    - --listen-peer-urls={{ etcd_listen_peer_urls }}
{% if groups[etcd_peers_group] and groups[etcd_peers_group] | length > 0 %}
    - --name={{ ansible_hostname }}
{% else %}
    - --name=default
{% endif %}
    - --peer-cert-file={{ kube.cert_dir }}/etcd.pem
    - --peer-client-cert-auth=true
    - --peer-key-file={{ kube.cert_dir }}/etcd-key.pem
    - --peer-trusted-ca-file={{ kube.cert_dir }}/ca.pem
    - --trusted-ca-file={{ kube.cert_dir }}/ca.pem
    - --snapshot-count=10000
    image: {{ etcd_image }}
    imagePullPolicy: IfNotPresent
    livenessProbe:
      exec:
        command:
        - /bin/sh
        - -ec
        - ETCDCTL_API=3 etcdctl --endpoints={{ etcd_advertise_client_urls }} --cacert={{ kube.cert_dir }}/ca.pem
          --cert={{ kube.cert_dir }}/etcd.pem --key={{ kube.cert_dir }}/etcd-key.pem
          get foo
      failureThreshold: 8
      initialDelaySeconds: 15
      timeoutSeconds: 15
    name: etcd
    resources: {}
    volumeMounts:
    - mountPath: {{ kube.cert_dir }}
      name: etcd-certs
    - mountPath: {{ etcd.data_dir }}
      name: etcd-data
  hostNetwork: true
  priorityClassName: system-cluster-critical
  volumes:
  - hostPath:
      path: {{ kube.cert_dir }}
      type: DirectoryOrCreate
    name: etcd-certs
  - hostPath:
      path: {{ etcd.data_dir }}
      type: DirectoryOrCreate
    name: etcd-data
